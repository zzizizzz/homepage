<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN" 
"http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<!-- 
	ibatis의 환경설정 파일이다.
	
 -->
<sqlMapConfig>

	<!-- 
		<transactionManager>
			트랜잭션 처리 방식을 지장하는 태그다.
		<dataSource>
			태그는 커넥션풀 설정을 지정하는 태그다.
			커넥션풀은 데이터베이스와 연결된 커넥션을 관리하는 객체다.
			커넥션풀을 이용하면 데이터베이스 엑세스 성능을 향상 시킬수 있고,
			커넥션생성에 소요되는 부하를 감소 시킬수 있다.
	 -->
	<transactionManager type="JDBC">
	  	  <dataSource type="SIMPLE">
	  	  	  <property name="JDBC.Driver" value="oracle.jdbc.OracleDriver"/>
	  	  	  <property name="JDBC.ConnectionURL" value="jdbc:oracle:thin:@localhost:1521:xe"/>
	  	  	  <property name="JDBC.Username" value="comm"/>
	  	  	  <property name="JDBC.Password" value="zxcv1234"/>
	  	  </dataSource>
	  </transactionManager>

	<!-- 
		매핑된 SQL 구문이 정의된 SQL Mapper 파일의 경로를 등록하는 태그다.
	 -->	  
	  <sqlMap resource="ibatis/mappers/users.xml" />
	  <sqlMap resource="ibatis/mappers/borders.xml" />
</sqlMapConfig>   



